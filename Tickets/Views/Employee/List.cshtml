@{
    Layout = null;
    ViewBag.Title = "Listado de Empleado";
}
<div class="col-lg-12 no-padder" ng-controller="EmployeeController" ng-init="app.title = '@(ViewBag.Title)'">
    <div class="col-lg-12 no-padder">
        <div class="panel panel-default">
            <div class="panel-body">
                <!-- START panel-->
                <div class="col-lg-12 text-right m-b-xs no-padder">
                    <a ng-click="editEmployees()" class="btn btn-square btn-success {{moduleCanAdd}}"><i class="fa fa-plus-square"></i> Agregar Empleado</a>
                </div>
                <div class="row-border hover ">
                    <table class="table dataTableGrid">
                        <thead>
                            <tr>
                                <th>Nombre</th>
                                <th>Apellido</th>
                                <th>Cédula</th>
                                <th>Teléfono</th>
                                <th>E-Mail</th>
                                <th>Estatus</th>
                                <th class="editColumm"></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr data-ng-repeat="employee in employeeList">
                                <td>{{employee.Name}}</td>
                                <td>{{employee.LastName}}</td>
                                <td>{{employee.DocumentNumber}}</td>
                                <td>{{employee.Phone}}</td>
                                <td>{{employee.Email}}</td>
                                <td>{{employee.StatuDesc}}</td>
                                <td>
                                    <a ng-click="editEmployees(employee)" title="Moificar Empleado" class="{{moduleCanEdit}}"><i class="fa fa-pencil-square-o"></i></a>
                                    <a ng-click="deleteEmployee(employee)" title="Suspender Empleado" class="{{moduleCanDelete}}"><i class="fa fa-ban"></i></a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <!-- END table-responsive-->
            </div>
        </div>
    </div>
</div>
<div class="col-lg-12 no-padder text-left m-b-lg"> 
    <a ui-sref="app.dashboard" class="mr btn btn-square btn-default"><i class="fa fa-arrow-left "></i> Salir</a>
</div>
