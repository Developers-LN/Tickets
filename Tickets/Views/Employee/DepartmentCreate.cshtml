@{
    Layout = null;
    ViewBag.Title = "Creación de Departamento";
}
<!-- START panel-->
<div class="col-lg-12 no-padder" ng-controller="EmployeeController" ng-init="app.title = '@(ViewBag.Title)'">
    <div class="col-lg-12 no-padder">
        <div class="panel panel-default">
            <div class="panel-body">
                <input type="hidden"
                       ng-model="department.Id" />
                <fieldset>
                    <div class="form-group">
                        <label class="col-lg-12 control-label-left">Nombre: </label>
                        <div class="col-lg-12">
                            <input type="text"
                                   ng-model="department.NameDetail"
                                   class="form-control"
                                   ng-required="true">
                        </div>
                    </div>
                </fieldset>
                <fieldset>
                    <div class="form-group">
                        <label class="col-lg-12 control-label-left">Descripción: </label>
                        <div class="col-lg-12">
                            <textarea class="form-control"
                                      ng-model="department.Description"
                                      style="max-height: 109px; height: 109px;"></textarea>
                        </div>
                    </div>
                </fieldset>
                <fieldset>
                    <div class="form-group">
                        <div class="checkbox c-checkbox needsclick col-lg-12">
                            <label class="needsclick m-r-xs">
                                <input type="checkbox"
                                       value=""
                                       checked="checked"
                                       class="needsclick"
                                       ng-model="department.Statu" />
                                <span class="fa fa-check"></span>Activo
                            </label>
                        </div>
                    </div>
                </fieldset>
            </div>
        </div>
    </div>
    <div class="col-lg-12 no-padder text-left m-b-lg">
        <a ui-sref="app.departmentList" class="mr btn btn-square btn-warning"><i class="fa fa-times"></i> Cancelar</a>
        <a ng-click="saveDepartmentForm()" class="mr btn btn-square btn-primary {{department.Id > 0? moduleCanEdit: moduleCanAdd }}"><i class="fa fa-floppy-o"></i> Guardar</a>
    </div>
</div>