@{
    Layout = null;
    ViewBag.Title = "Reporte de Devoluciones Premiadas";
}
<!-- START panel-->
<div class="col-lg-12 no-padder" ng-controller="ReturnedAwardReportsController" ng-init="app.title = '@(ViewBag.Title)'">
    <div class="col-lg-12 no-padder">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="col-lg-12 m-b-xs no-padder">
                    <div class="col-lg-6 no-padder">
                        <fieldset>
                            <label class="col-lg-12 control-label-left">Sorteos: </label>
                            <div class="col-lg-12">
                                <select class="form-control dropdown-select2" ng-model="returned.RaffleId" ng-change="getGroup()">
                                    <option selected="selected" value="0">Todos los sorteos</option>
                                    <option ng-repeat="raffle in raffles" value="{{raffle.value}}">{{raffle.value}} - {{raffle.text}}</option>
                                </select>
                            </div>
                        </fieldset>
                    </div>
                    <div class="col-lg-6 no-padder">
                        <fieldset>
                            <label class="col-lg-12 control-label-left">Grupos de Devoluciones: </label>
                            <div class="col-lg-12">
                                <select class="form-control dropdown-select2" ng-model="returned.GroupId">
                                    <option selected="selected" value="">Todos los Grupos</option>
                                    <option ng-repeat="group in groups" value="{{group.value}}"> {{group.text}}</option>
                                </select>
                            </div>
                        </fieldset>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-12 no-padder text-left m-b-lg">
        <a href="#/dashboard" class="mr btn btn-square btn-warning"><i class="fa fa-times"></i> Salir</a>
        <a ng-click="printReport()" class="mr btn btn-square btn-primary"><i class="fa fa-print"></i> Generar Reporte</a>
    </div>
</div>