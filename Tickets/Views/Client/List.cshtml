@{
    Layout = null;
    ViewBag.Title = "Listado de Cliente";
}
<div class="col-lg-12 no-padder" ng-controller="ClientListController" ng-init="app.title = '@(ViewBag.Title)'">
    <div class="col-lg-12 no-padder">
        <div class="panel panel-default">
            <div class="panel-body">
                <!-- START panel-->
                <div class="col-lg-12 text-right m-b-xs no-padder">
                    <a href="#/client/client/0" class="btn btn-square btn-success {{moduleCanAdd}}"><i class="fa fa-plus-square"></i> Agregar Cliente</a>
                </div>
                <div class="row-border hover">
                    <table class="table dataTableGrid">
                        <thead>
                            <tr>
                                <th>Codigo</th>
                                <th>Nombre</th>
                                <th>Nombre Comercial</th>
                                @*<th>RNC</th>*@
                                <th>Cédula</th>
                                <th>Teléfono</th>
                                <th>Limite de Crédito</th>
                                @*<th>Monto de Fianza</th>*@
                                <th>Estatus</th>
                                <th class="editColumm">Acción</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr data-ng-repeat="client in clientList">
                                <td>{{client.Id}}</td>
                                <td>{{client.Name}}</td>
                                <td>{{client.Tradename}}</td>
                                @*<td>{{client.RNC}}</td>*@
                                <td>{{client.DocumentNumber}}</td>
                                <td>{{client.Phone}}</td>
                                <td>{{parseMoney(client.CreditLimit)}}</td>
                                @*<td>{{parseMoney(client.AmountDeposit)}}</td>*@
                                <td>{{client.StatuDesc}}</td>
                                <td>
                                    <a ng-click="startWorkflowProspect(client)" ng-show="client.Statu == @((int)Tickets.Models.Enums.ClientStatuEnum.Created)" title="Enviar client a aprobación" class="{{moduleCanAdd}}"><i class="fa fa-external-link"></i></a>
                                    <a href="#/client/client/{{client.Id}}" title="Modificar Cliente" class="{{moduleCanEdit}}"><i class="fa fa-pencil-square-o"></i></a>
                                    <a ng-click="deleteClient(client)" title="Suspender Cliente" class="hide {{moduleCanDelete}}"><i class="fa fa-ban"></i></a>
                                    <a href="/Reports/ClientDetails?ClientId={{client.Id}}" target="_blank" title="Detalles de cliente" class="{{moduleCanView}}"><i class="fa fa-eye"></i></a>
                                    @*<a href="/Reports/ShowDocument?clientId={{client.Id}}&type=admin" target="_blank" title="Ver Documento Administrativo"><i class="fa fa-file-o"></i></a>*@
                                    @*<a href="/Reports/ShowDocument?clientId={{client.Id}}&type=fianza" target="_blank" title="Ver Documento de Fianza"><i class="fa fa-file-o"></i></a>*@
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <!-- END table-responsive-->
            </div>
        </div>
    </div>
</div>
<div class="col-lg-12 no-padder text-left m-b-lg"> 
    <a ui-sref="app.dashboard" class="mr btn btn-square btn-default"><i class="fa fa-arrow-left "></i> Salir</a>
</div>
