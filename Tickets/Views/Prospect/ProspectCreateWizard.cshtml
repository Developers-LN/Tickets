@{
    Layout = null;
    ViewBag.Title = "Creación de Prospecto";
}
<!-- START panel-->
<style>
    .dataTables_No hay datos {
        display: none !important;
    }
</style>
<div class="col-lg-12 no-padder" ng-controller="ProspectCreateWizardController" ng-init="app.title = '@(ViewBag.Title)'">
    <div class="panel panel-default">
        <div class="panel-body">
            <div class="wizard">
                <ul class="steps-bar">
                    <li ng-class="{'active':activeStep&gt;=1}" ng-click="topGoToStep(1)">
                        <span>Definir la creación</span>
                    </li>
                    <li ng-class="{'active':activeStep&gt;=2}" ng-click="topGoToStep(2)">
                        <span>Diseño de Prospecto</span>
                    </li>
                    <li ng-class="{'active':activeStep&gt;=3}" ng-click="topGoToStep(3)">
                        <span>Administración de Precios</span>
                    </li>
                    <li ng-class="{'active':activeStep&gt;=4}" ng-click="topGoToStep(4)">
                        <span>Asignación de premios</span>
                    </li>
                    <li ng-class="{'active':activeStep&gt;=5}" ng-click="topGoToStep(5)">
                        <span>Verificar</span>
                    </li>
                </ul>
                <div ng-if="activeStep==1" class="wizard-step">
                    <div ng-include="'/Prospect/_CreationTypePartial'"></div>
                </div>
                <div ng-if="activeStep==2" class="wizard-step">
                    <div ng-include="'/Prospect/_ProspectDesingPartial'"></div>
                </div>
                <div ng-if="activeStep==3" class="wizard-step">
                    <div ng-include="'/Prospect/_ProspectPricePartial'"></div>
                </div>
                <div ng-if="activeStep==4" class="wizard-step">
                    <div ng-include="'/Prospect/_ProspectAwardPartial'"></div>
                </div>
                <div ng-if="activeStep==5" class="wizard-step">
                    <div ng-include="'/Prospect/_ProspectVerifyPartial'"></div>
                </div>
            </div>
        </div>
    </div>
</div>
