
@{
    ViewBag.Title = "Agregar comprobante fiscal";
    Layout = null;
}

<!-- START panel-->
<div class="col-lg-12 no-padder" ng-controller="TaxReceiptController" ng-init="app.title = '@(ViewBag.Title)'">
    <div class="col-lg-12 no-padder">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="col-lg-12 m-b-xs no-padder">
                    <div class="col-lg-4 text-left m-b-xs no-padder">
                        <fieldset>
                            <div class="form-group">
                                <label class="col-lg-12 control-label-left">Tipo de comprobante fiscal: <span class="color-red">*</span></label>
                                <div class="col-lg-12">
                                    <select ng-required="true" class="form-control dropdown-select2" ng-model="taxReceipt.Type">
                                        <option selected="selected" disabled="disabled" value="0">Seleccione un tipo de comprobante fiscal</option>
                                        <option ng-repeat="taxType in taxTypes" value="{{taxType.Id}}">{{taxType.NameDetail}}</option>
                                    </select>
                                </div>
                            </div>
                        </fieldset>
                    </div>
                    <div class="col-lg-2 text-left m-b-xs no-padder">
                        <fieldset>
                            <div class="form-group">
                                <label class="col-lg-12 control-label-left">Fecha de caducidad:  <span class="color-red">*</span></label>
                                <div class="col-lg-12">
                                    <input type="date"
                                           ng-model="taxReceipt.DueDate"
                                           class="form-control input-sm datatime-picker"
                                           ng-required="true" />
                                </div>
                            </div>
                        </fieldset>
                    </div>
                    <div class="col-lg-3 no-padder">
                        <fieldset>
                            <div class="form-group">
                                <label class="col-lg-12 control-label-left">Secuencia desde:  <span class="color-red">*</span></label>
                                <div class="col-lg-12">
                                    <input type="number"
                                           ng-model="taxReceipt.SequenceFrom"
                                           class="form-control input-sm"
                                           ng-required="true"
                                           ng-min="1" />
                                </div>
                            </div>
                        </fieldset>
                    </div>
                    <div class="col-lg-3 no-padder">
                        <fieldset>
                            <div class="form-group">
                                <label class="col-lg-12 control-label-left">Secuencia hasta:  <span class="color-red">*</span></label>
                                <div class="col-lg-12">
                                    <input type="number"
                                           ng-model="taxReceipt.SequenceTo"
                                           class="form-control input-sm"
                                           ng-required="true"
                                           ng-min="taxReceipt.SequenceFrom" />
                                </div>
                            </div>
                        </fieldset>
                    </div>
                    <div class="col-lg-12 no-padder">
                        <fieldset>
                            <div class="form-group">
                                <label class="col-lg-12 control-label-left">Notas:</label>
                                <div class="col-lg-12">
                                    <textarea class="form-control input-sm" ng-model="taxReceipt.Notas" style="max-height: 109px; height: 97px;"></textarea>
                                </div>
                            </div>
                        </fieldset>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-12 no-padder text-left m-b-lg">
        <a ng-click="goBack()" class="mr btn btn-square btn-warning"><i class="fa fa-times"></i> Salir</a>
        <a ng-click="saveForm()" class="mr btn btn-square btn-primary {{moduleCanAdd}}"><i class="fa fa-floppy-o"></i> Guardar</a>
    </div>
</div>
