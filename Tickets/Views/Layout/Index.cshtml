<!-- top navbar-->
<header ng-include="'/Templates/TopNavbar'" ng-controller="HeaderNavController" ng-class="app.theme.topbar"></header>
<!-- Sidebar-->
<aside ng-include="'/Templates/Sidebar'" ng-class="app.theme.sidebar"></aside>
<!-- Main-->
<section>
    <div class="col-lg-12 no-padder" ng-if="systemLoading == true">
        <img src="~/Images/loader.gif" style="width:128px;display: block; margin-left: auto;margin-right: auto; padding-top: 30px;"/>
    </div>
   <!-- Content-->
   <div ui-view autoscroll="false" ng-class="app.views.animation" class="app" ng-show="systemLoading == false"></div>
</section>
<!-- Page footer-->
<footer class="hide" ng-include="'/Templates/Footer'"></footer>
