@{
    Layout = null;
    ViewBag.Title = "Ventas y pagos pendientes";
}

<!-- START panel-->
<div class="col-lg-12 no-padder" ng-controller="AccountReceivableReportsController" ng-init="app.title = '@(ViewBag.Title)'">
    <div class="col-lg-12 no-padder">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="col-lg-12 m-b-xs no-padder">
                    <div class="col-lg-12 no-padder">
                        <fieldset>
                            <div class="form-group">
                                <label class="col-lg-12 control-label-left">Sorteo: </label>
                                <div class="col-lg-12">
                                    <select class="form-control dropdown-select2" ng-model="cash.RaffleId">
                                        <option selected="selected" value="0">Todos los sorteo</option>
                                        <option ng-repeat="raffle in raffles" value="{{raffle.value}}">{{raffle.value}} - {{raffle.text}}</option>
                                    </select>
                                </div>
                            </div>
                        </fieldset>
                    </div>
                    <div>
                        <div class="col-lg-6 no-padder">
                            <fieldset>
                                <label class="col-lg-12 control-label-left">Fecha de Inicio: </label>
                                <div class="col-lg-10" style="padding-right: 0">
                                    <input type="date"
                                           id="startDate"
                                           class="form-control"
                                           ng-model="cash.StartDate" , />
                                </div>
                                <div class="col-lg-1 no-padder">
                                    <button id="reset-date" class="btn btn-square btn-warning"><i class="fa fa-times"></i></button>
                                </div>
                            </fieldset>
                        </div>
                        <div class="col-lg-6 no-padder">
                            <fieldset>
                                <label class="col-lg-12 control-label-left">Fecha Fin: </label>
                                <div class="col-lg-10" style="padding-right: 0">
                                    <input type="date"
                                           id="endDate"
                                           class="form-control"
                                           ng-model="cash.EndDate" , />
                                </div>
                                <div class="col-lg-1 no-padder">
                                    <button id="reset-date1" class="btn btn-square btn-warning"><i class="fa fa-times"></i></button>
                                </div>
                            </fieldset>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-12 no-padder text-left m-b-lg">
            <a href="#/report/invoiceDetailList" class="mr btn btn-square btn-warning"><i class="fa fa-times"></i> Salir</a>
            <a ng-click="GenerateExcelReport()" class="mr btn btn-square btn-primary"><i class="fa fa-print"></i> Generar Reporte en Excel</a>
        </div>
    </div>
</div>
