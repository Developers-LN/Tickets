@{
    Layout = null;
    ViewBag.Title = "Listado de detalle de facturas";
}

<div class="col-lg-12 no-padder" ng-controller="InvoiceDetailListController" ng-init="app.title = '@(ViewBag.Title)'">
    <div class="col-lg-12 no-padder">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="col-lg-4 text-left m-b-xs no-padder">
                    <fieldset>
                        <div class="form-group">
                            <label class="col-lg-12 control-label-left">Sorteo:  <span class="color-red">*</span></label>
                            <div class="col-lg-12">
                                <select ng-required="true" class="form-control dropdown-select2" ng-model="RaffleId" ng-change="updateInvoiceDetails()">
                                    <option selected="selected" disabled="disabled" value="0">Seleccione un sorteo</option>
                                    <option ng-repeat="raffle in raffles" value="{{raffle.Id}}">{{raffle.text}}</option>
                                </select>
                            </div>
                        </div>
                    </fieldset>
                </div>
                <div class="col-lg-4 text-left m-b-xs no-padder">
                    <fieldset>
                        <div class="form-group">
                            <label class="col-lg-12 control-label-left">Cliente: </label>
                            <div class="col-lg-12">
                                <select class="form-control dropdown-select2" ng-model="ClientId" ng-change="updateInvoiceDetails()">
                                    <option selected="selected" value="0">Seleccione un cliente</option>
                                    <option ng-repeat="client in clients" value="{{client.Id}}">{{client.Id}} - {{client.Name}}</option>
                                </select>
                            </div>
                        </div>
                    </fieldset>
                </div>
                <div class="col-lg-4 text-right m-b-xs no-padder">
                    <a href="#/report/invoiceDetail" class="btn btn-square btn-success {{moduleCanAdd}}"><i class="fa fa-file-o"></i> Crear detalle de facturas</a>
                </div>
                <div class="row-border hover ">
                    <table class="table dataTableGrid">
                        <thead>
                            <tr>
                                <th class="text-center">RF</th>
                                <th>Sorteo</th>
                                <th>Cliente</th>
                                <th>Fondo Pagador</th>
                                <th>Fecha Inicio</th>
                                <th>Fecha Fin</th>
                                <th class="editColumm text-center">Acción</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr data-ng-repeat="invoiceDetail in invoiceDetails">
                                <td class="text-center">{{invoiceDetail.SequenceNumber}}</td>
                                <td>{{invoiceDetail.RaffleDesc}}</td>
                                <td>{{invoiceDetail.ClientId}} - {{invoiceDetail.ClientDesc}}</td>
                                <td>{{invoiceDetail.PayingFund}}</td>
                                <td>{{(invoiceDetail.StartDate | date:"dd/MM/yyyy")}}</td>
                                <td>{{(invoiceDetail.EndDate | date:"dd/MM/yyyy")}}</td>
                                <td class="text-center">
                                    <a target="_blank" href="/Reports/InvoiceDeatilCashReport?invoiceDetailId={{invoiceDetail.Id}}" title="ver detalles del Factura"><i class="fa fa-eye" class="{{modulecanview}}"></i></a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <!-- END table-responsive-->
            </div>
        </div>
    </div>
</div>
<div class="col-lg-12 no-padder text-left m-b-lg"> 
    <a ui-sref="app.dashboard" class="mr btn btn-square btn-default"><i class="fa fa-arrow-left "></i> Salir</a>
</div>
