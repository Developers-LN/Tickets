@{
    Layout = null;
    ViewBag.Title = "Apertura de Caja";
}
<!-- START panel-->
<div class="col-lg-12 no-padder" ng-controller="OpenCashController" ng-init="app.title = '@(ViewBag.Title)'">
    <div class="col-lg-12 no-padder">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="col-lg-6 no-padder">
                    <fieldset>
                        <div class="form-group">
                            <label class="col-lg-12 control-label-left">Monto de Entrada:  <span class="color-red">*</span></label>
                            <div class="col-lg-12">
                                <input type="number"
                                       step="any"
                                       ng-model="cash.OpenValue"
                                       class="form-control input-sm"
                                       ng-required="true" />
                            </div>
                        </div>
                    </fieldset>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-12 no-padder text-left m-b-lg">
        <a ui-sref="app.dashboard" class="mr btn btn-square btn-warning"><i class="fa fa-times"></i> Salir</a>
        <a ng-click="saveCashForm()" class="mr btn btn-square btn-primary {{moduleCanAdd}}"><i class="fa fa-floppy-o"></i> Guardar</a>
    </div>
</div>