@{
    Layout = null;
    ViewBag.Title = "Notas de crédito";
}

<div class="col-lg-12 no-padder" ng-controller="NoteCreaditListController" ng-init="app.title = '@(ViewBag.Title)'">
    <div class="col-lg-12 no-padder">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="col-lg-6 text-left m-b-xs no-padder">
                    <fieldset>
                        <div class="form-group">
                            <label class="col-lg-12 control-label-left">Cliente:  <span class="color-red">*</span></label>
                            <div class="col-lg-12">
                                <select class="form-control dropdown-select2" ng-model="ClientId" ng-change="changeCreditNote()">
                                    <option selected="selected" disabled="disabled" value="0">Seleccione un cliente</option>
                                    <option ng-repeat="client in clients" value="{{client.Id}}">{{client.Name}}</option>
                                </select>
                            </div>
                        </div>
                    </fieldset>
                </div>
                <div class="col-lg-6 text-right m-b-xs no-padder">
                    <a href="#/cash/noteCredit/0/0" class="btn btn-square btn-success {{moduleCanAdd}}"><i class="fa fa-plus-square"></i> Nota de crédito</a>
                </div>
                <div class="row-border hover ">
                    <table class="table dataTableGrid">
                        <thead>
                            <tr>
                                <th>Codigo</th>
                                <th>Cliente</th>
                                <th>Fecha</th>
                                <th>Cantidad Pagado</th>
                                <th>Cantidad Restante</th>
                                <th>Concepto</th>
                                <th>Acción</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr data-ng-repeat="creditNote in creditNotes">
                                <td>{{creditNote.SequenceNumberNoteCredit}}</td>
                                <td>{{creditNote.ClientDesc}}</td>
                                <td>{{creditNote.NoteDate}}</td>
                                <td>{{parseMoney(creditNote.TotalCash)}}</td>
                                <td>{{parseMoney(creditNote.TotalRest)}}</td>
                                <td>{{creditNote.Concepts}}</td>
                                @*<td><a href="#/cash/noteCredit/{{creditNote.Id}}/0" class="{{moduleCanEdit}}"><i class="fa fa-pencil"></i></a></td>*@
                                <td><a target="_blank" href="~/Reports/NoteCreditDetail?noteCreditId={{creditNote.Id}}" title="Imprimir Detalle de Factura"><i class="fa fa-print"></i></a></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <!-- END table-responsive-->
            </div>
        </div>
    </div>
</div>
<div class="col-lg-12 no-padder text-left m-b-lg">
    <a ui-sref="app.dashboard" class="mr btn btn-square btn-default"><i class="fa fa-arrow-left "></i> Salir</a>
</div>
