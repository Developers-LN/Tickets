@{
    Layout = null;
    ViewBag.Title = "Reportes de tipos de Premios";
}
<div class="col-lg-12 no-padder" ng-controller="RaffleGeneratedtypesController" ng-init="app.title = '@(ViewBag.Title)'">
    <div class="col-lg-12 no-padder">
        <div class="panel panel-default">
            <div class="panel-body">
                <!-- START panel-->

                <div class="row-border hover ">
                    <table class="table dataTableGrid">
                        <thead>
                            <tr>
                                <th style="width:70px" class="text-center">ID</th>
                                <th>Nombre Sorteo</th>
                                <th class="text-center">Premios Mayores</th>
                                <th class="text-center">Especiales Ascendentes</th>
                                <th class="text-center">Intermedios Ascendentes</th>
                                <th class="text-center">Premios Menores</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr data-ng-repeat="raffle in raffles">
                                <td class="text-center">{{raffle.id}}</td>
                                <td>{{raffle.name}}</td>
                                <td class="text-center">
                                    <a href="/Reports/MajorAwardInline?raffleId={{raffle.id}}" target="_blank" title="Premios Especiales Ascendentes"><i class="fa fa-print"></i></a>
                                </td>
                                <td class="text-center">
                                    <a href="/Reports/SpecialAwardInline?raffleId={{raffle.id}}" target="_blank" title="Premios Especiales Ascendentes"><i class="fa fa-print"></i></a>
                                </td>
                                <td class="text-center">
                                    <a href="/Reports/IntermAwardInline?raffleId={{raffle.id}}" target="_blank" title="Premios Intermedios Ascendentes"><i class="fa fa-print"></i></a>
                                </td>
                                <td class="text-center">
                                    <a href="/Reports/MinorAwardInline?raffleId={{raffle.id}}" target="_blank" title="Premios Menores"><i class="fa fa-print"></i></a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <!-- END table-responsive-->
            </div>
        </div>
    </div>
</div>
<div class="col-lg-12 no-padder text-left m-b-lg"> 
    <a ui-sref="app.dashboard" class="mr btn btn-square btn-default"><i class="fa fa-arrow-left "></i> Salir</a>
</div>
