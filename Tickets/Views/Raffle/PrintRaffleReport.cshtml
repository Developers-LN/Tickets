@{
    Layout = null;
    ViewBag.Title = "Reporte de sorteo";
}
<!-- START panel-->
<div class="col-lg-12 no-padder" ng-controller="AccountPaymentsReportsController" ng-init="app.title = '@(ViewBag.Title)'">
    <div class="col-lg-12 no-padder">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="col-lg-12 m-b-xs no-padder">
                    <div class="col-lg-6 no-padder">
                        <fieldset>
                            <label class="col-lg-12 control-label-left">Fecha de Inicio: </label>
                            <div class="col-lg-10" style="padding-right: 0">
                                <input type="date"
                                       id="startDate"
                                       class="form-control"
                                       ng-required="required"
                                       ng-model="cash.StartDate" />
                            </div>
                            <div class="col-lg-1 no-padder">
                                <button id="reset-date" class="btn btn-square btn-warning"><i class="fa fa-times"></i></button>
                            </div>
                        </fieldset>
                    </div>
                    <div class="col-lg-6 no-padder">
                        <fieldset>
                            <label class="col-lg-12 control-label-left">Fecha Fin: </label>
                            <div class="col-lg-10" style="padding-right: 0">
                                <input type="date"
                                       id="endDate"
                                       class="form-control"
                                       ng-required="required"
                                       ng-model="cash.EndDate" />
                            </div>
                            <div class="col-lg-1 no-padder">
                                <button id="reset-date1" class="btn btn-square btn-warning"><i class="fa fa-times"></i></button>
                            </div>
                        </fieldset>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-12 no-padder text-left m-b-lg">
        <a href="#/report/invoiceDetailList" class="mr btn btn-square btn-warning"><i class="fa fa-times"></i> Salir</a>
        <a ng-click="printReporteSorteo()" class="mr btn btn-square btn-success"><i class="fa fa-print"></i> Generar Reporte de sorteos</a>
    </div>
</div>
