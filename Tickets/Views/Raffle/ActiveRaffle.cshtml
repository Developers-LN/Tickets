@{
    Layout = null;
    ViewBag.Title = "Generación de sorteo";
}
<div class="col-lg-12 no-padder" ng-controller="ActiveRaffleController" ng-init="app.title = '@(ViewBag.Title)'">
    <div class="col-lg-12 no-padder">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="col-lg-12 well no-padder">
                    <div class="col-lg-12 text-center">
                        <h2>SORTEO #{{raffle.id}}</h2>
                    </div>
                    <div class="col-lg-6 no-padder">
                        <fieldset>
                            <div class="form-group m-t-xs">
                                <div class="col-lg-4">Nombre de Sorteo: </div>
                                <div class="col-lg-8"><b ng-bind="raffle.name"></b></div>
                            </div>
                        </fieldset>
                        <fieldset>
                            <div class="form-group m-t-xs">
                                <div class="col-lg-4">Fecha de Sorteo: </div>
                                <div class="col-lg-8"><b>{{(raffle.raffleDate | date:"dd/MM/yyyy")}}</b></div>
                            </div>
                        </fieldset>
                    </div>
                    <div class="col-lg-6 no-padder">
                        <fieldset>
                            <div class="form-group m-t-xs">
                                <div class="col-lg-4">Observación: </div>
                                <div class="col-lg-8"><b ng-bind="raffle.note"></b></div>
                            </div>
                        </fieldset>
                        <fieldset>
                            <div class="form-group m-t-xs">
                                <div class="col-lg-4">Mercancía: </div>
                                <div class="col-lg-8"><b ng-bind="raffle.commodityDesc"></b></div>
                            </div>
                        </fieldset>
                    </div>
                    <div class="col-lg-12 no-padder">
                        <fieldset>
                            <div class="form-group m-t-xs">
                                <div class="col-lg-3">Nombre de prospecto de billetes: </div>
                                <div class="col-lg-9"><b ng-bind="raffle.ticketProspectDesc"></b></div>
                            </div>
                        </fieldset>
                    </div>
                </div>
                <div class="row-border hover text-center">
                    <a href="#/raffle/virtual/{{raffle.id}}" class="mr btn btn-square btn-lg btn-primary" title="Generar Sorteo"><i class="fa fa-gear"></i> Generar Sorteo</a>
                </div>
                <!-- END table-responsive-->
            </div>
        </div>
    </div>
</div>
<div class="col-lg-12 no-padder text-left m-b-lg">
    <a href="#/dashboard" class="mr btn btn-square btn-default"><i class="fa fa-arrow-left "></i>Salir</a>
</div>
