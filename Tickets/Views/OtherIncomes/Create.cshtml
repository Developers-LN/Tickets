@{
    Layout = null;
    ViewBag.Title = "Creación de otros ingresos";
}

<!-- START panel-->
<div class="col-lg-12 no-padder" ng-controller="OtherIncomesCreateController" ng-init="app.title = '@(ViewBag.Title)'">
    <div class="col-lg-12 no-padder">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="col-lg-4 no-padder">
                    <input type="hidden" ng-model="otherIncome.Id" />
                    <fieldset>
                        <div class="form-group">
                            <label class="col-lg-12 control-label-left">Número de cuenta:  <span class="color-red">*</span></label>
                            <div class="col-lg-12">
                                <input ng-disabled="otherIncome.Id > 0" type="text" ng-model="otherIncome.NoCatalogAccount" class="form-control input-sm" ng-required="true" maxlength="100" />
                            </div>
                        </div>
                    </fieldset>
                    <fieldset>
                        <div class="form-group">
                            <label class="col-lg-12 control-label-left">Tipo de cuenta: <span class="color-red">*</span></label>
                            <div class="col-lg-12">
                                <select ng-required="true" class="form-control input-sm dropdown-select2" ng-model="otherIncome.AccountType">
                                    <option selected="selected" disabled="disabled" value="0">Seleccione una opción</option>
                                    <option ng-repeat="otherIncomeType in otherIncomeTypes" value="{{otherIncomeType.Id}}" ng-selected="otherIncomeType.Id == otherIncome.AccountType">{{otherIncomeType.Name}}</option>
                                </select>
                            </div>
                        </div>
                    </fieldset>
                </div>
                <div class="col-lg-4 no-padder">
                    <fieldset>
                        <div class="form-group">
                            <label class="col-lg-12 control-label-left">Nombre de cuenta:  <span class="color-red">*</span></label>
                            <div class="col-lg-12">
                                <input type="text" ng-model="otherIncome.AccountName" class="form-control input-sm" ng-required="true" maxlength="100" />
                            </div>
                        </div>
                    </fieldset>
                    <fieldset>
                        <div class="form-group">
                            <label class="col-lg-12 control-label-left">Periodicidad de pago: <span class="color-red">*</span></label>
                            <div class="col-lg-12">
                                <select ng-required="true" class="form-control input-sm dropdown-select2" ng-model="otherIncome.Periodicity">
                                    <option selected="selected" disabled="disabled" value="0">Seleccione una opción</option>
                                    <option ng-repeat="periodicity in periodicities" value="{{periodicity.Id}}" ng-selected="periodicity.Id == otherIncome.Periodicity">{{periodicity.Name}}</option>
                                </select>
                            </div>
                        </div>
                    </fieldset>
                </div>
                <div class="col-lg-4 no-padder">
                    <fieldset>
                        <div class="form-group">
                            <label class="col-lg-12 control-label-left">Origen de cuenta: <span class="color-red">*</span></label>
                            <div class="col-lg-12">
                                <select ng-required="true" class="form-control input-sm dropdown-select2" ng-model="otherIncome.Origin">
                                    <option selected="selected" disabled="disabled" value="0">Seleccione una opción</option>
                                    <option ng-repeat="origin in origins" value="{{origin.Id}}" ng-selected="origin.Id == otherIncome.Origin">{{origin.Name}}</option>
                                </select>
                            </div>
                        </div>
                    </fieldset>
                    <fieldset>
                        <div class="form-group">
                            <label class="col-lg-12 control-label-left">Estado: <span class="color-red">*</span></label>
                            <div class="col-lg-12">
                                <select ng-required="true" class="form-control input-sm dropdown-select2" ng-model="otherIncome.Status">
                                    <option selected="selected" disabled="disabled" value="0">Seleccione una opción</option>
                                    <option ng-repeat="statu in status" value="{{statu.Id}}" ng-selected="statu.Id == otherIncome.Status">{{statu.Name}}</option>
                                </select>
                            </div>
                        </div>
                    </fieldset>
                </div>
                <div class="col-lg-12 no-padder">
                    <fieldset>
                        <div class="form-group">
                            <label class="col-lg-12 control-label-left">Descripción: <span class="color-red">*</span></label>
                            <div class="col-lg-12">
                                <textarea class="form-control input-sm" style="height: 150px;" ng-required="true" ng-model="otherIncome.Description"></textarea>
                            </div>
                        </div>
                    </fieldset>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-12 no-padder text-left m-b-lg">
        <a ui-sref="app.otherincomesList" class="mr btn btn-square btn-warning"><i class="fa fa-times"></i> Cancelar</a>
        <a ng-click="saveOtherIncomeForm()" class="mr btn btn-square btn-primary {{otherIncome.Id > 0? moduleCanEdit: moduleCanAdd }}"><i class="fa fa-floppy-o"></i> Guardar</a>
    </div>
</div>
