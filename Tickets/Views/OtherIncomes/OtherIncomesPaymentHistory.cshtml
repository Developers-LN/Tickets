@{
    Layout = null;
    ViewBag.Title = "Historial de pagos por otros ingresos";
}

<div class="col-lg-12 no-padder" ng-controller="OtherIncomesHistoryController" ng-init="app.title = '@(ViewBag.Title)'">
    <div class="col-lg-12 no-padder">
        <div class="panel panel-default">
            <div class="panel-body">

                <div class="col-lg-12 well no-padder">
                    <fieldset>
                        <div class="col-lg-12 no-padder">
                            <div class="col-lg-4">Número de cuenta: <b>{{NoCatalogAccount}}</b></div>
                            <div class="col-lg-4">Nombre: <b> {{AccountName}}</b></div>
                            <div class="col-lg-4">Origen: <b> {{origin}}</b></div>
                        </div>
                    </fieldset>
                    <br />
                    <fieldset>
                        <div class="col-lg-12 no-padder">
                            <div class="col-lg-4">Tipo: <b>{{accountType}}</b></div>
                            <div class="col-lg-4">Periodicidad: <b> {{periodicity}}</b></div>
                            <div class="col-lg-4">Estado: <b> {{status}}</b></div>
                        </div>
                    </fieldset>
                    <br />
                    <fieldset>
                        <div class="col-lg-12 no-padder">
                            <div class="col-lg-12">Descripción: <b>{{Description}}</b></div>
                        </div>
                    </fieldset>
                </div>

                <div class="row-border hover">
                    <table class="table dataTableGrid">
                        <thead>
                            <tr>
                                <th class="text-center">Recibo</th>
                                <th class="text-center">Descripción</th>
                                <th class="text-center">Fecha de pago</th>
                                <th class="text-center">Total pagado</th>
                                <th class="text-center">Acción</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr data-ng-repeat="payment in paymentHistory">
                                <td class="text-center">{{payment.SequenceNumber}}</td>
                                <td class="text-center">{{payment.Description}}</td>
                                <td class="text-center">{{(payment.PaymentDate| date:"dd/MM/yyyy")}}</td>
                                <td class="text-center">{{parseMoney(payment.Total)}}</td>
                                <td class="text-center">
                                    <a target="_blank" href="/Reports/OtherPaymentReceipt?paymentId={{payment.Id}}" title="Reporte de pago"><i class="fa fa-print"></i></a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>

                <!-- END table-responsive-->
            </div>
        </div>
    </div>
</div>
<div class="col-lg-12 no-padder text-left m-b-lg">
    <a ui-sref="app.otherincomesList" class="mr btn btn-square btn-default"><i class="fa fa-arrow-left "></i> Salir</a>
</div>
