@{
    Layout = null;
    ViewBag.Title = "Pago por otros ingresos";
}

<!-- START panel-->
<div class="col-lg-12 no-padder" ng-controller="OtherIncomesPaymentCreateController" ng-init="app.title = '@(ViewBag.Title)'">
    <div class="col-lg-12 no-padder">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="col-lg-12 m-b-xs no-padder">
                    <input type="hidden" ng-model="otherIncomePayement.Id" />
                    <div class="col-lg-12 no-padder">
                        <fieldset>
                            <div class="form-group">
                                <label class="col-lg-12 control-label-left">Tipo de cuenta: <span class="color-red">*</span></label>
                                <div class="col-lg-12">
                                    <select ng-required="true" class="form-control input-sm dropdown-select2" ng-model="otherIncomePayement.OtherIncomeId">
                                        <option selected="selected" disabled="disabled" value="0">Seleccione una opción</option>
                                        <option ng-repeat="otherIncome in otherIncomeList" value="{{otherIncome.Id}}">{{otherIncome.NoCatalogAccount}} - {{otherIncome.AccountName}}</option>
                                    </select>
                                </div>
                            </div>
                        </fieldset>
                    </div>
                    <div class="col-lg-12 no-padder">
                        <div class="col-lg-4 no-padder">
                            <fieldset>
                                <div class="form-group">
                                    <label class="col-lg-12 control-label-left">Fecha de pago:  <span class="color-red">*</span></label>
                                    <div class="col-lg-12">
                                        <input type="date" ng-model="otherIncomePayement.PaymentDate" class="form-control input-sm" ng-required="true" maxlength="100" />
                                    </div>
                                </div>
                            </fieldset>
                        </div>
                        <div class="col-lg-4 no-padder">
                            <fieldset>
                                <div class="form-group">
                                    <label class="col-lg-12 control-label-left">Total pagado:  <span class="color-red">*</span></label>
                                    <div class="col-lg-12">
                                        <input type="number" ng-model="otherIncomePayement.Total" class="form-control input-sm" ng-required="true" maxlength="100" />
                                    </div>
                                </div>
                            </fieldset>
                        </div>
                    </div>
                    <div class="col-lg-12 no-padder">
                        <fieldset>
                            <div class="form-group">
                                <label class="col-lg-12 control-label-left">Descripción: <span class="color-red">*</span></label>
                                <div class="col-lg-12">
                                    <textarea class="form-control input-sm" style="height: 150px;" ng-required="true" ng-model="otherIncomePayement.Description"></textarea>
                                </div>
                            </div>
                        </fieldset>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-12 no-padder text-left m-b-lg">
        <a ui-sref="app.otherincomesPaymentsList" class="mr btn btn-square btn-warning"><i class="fa fa-times"></i> Cancelar</a>
        <a ng-click="saveOtherIncomePaymentForm()" class="mr btn btn-square btn-primary {{otherIncomePayement.Id > 0? moduleCanEdit: moduleCanAdd }}"><i class="fa fa-floppy-o"></i> Guardar</a>
    </div>
</div>
