@{
    Layout = null;
    ViewBag.Title = "Listado de otros ingresos";
}

<div class="col-lg-12 no-padder" ng-controller="OtherIncomesListController" ng-init="app.title = '@(ViewBag.Title)'">
    <div class="col-lg-12 no-padder">
        <div class="panel panel-default">
            <div class="panel-body">
                <!-- START panel-->
                <div class="col-lg-12 text-right m-b-xs no-padder">
                    <a href="#/others/otherIncomes/0" class="btn btn-square btn-success {{moduleCanAdd}}"><i class="fa fa-plus-square"></i> Agregar otros ingresos</a>
                </div>
                <div class="row-border hover">
                    <table class="table dataTableGrid">
                        <thead>
                            <tr>
                                <th>Cuenta</th>
                                <th>Nombre</th>
                                <th>Origen</th>
                                <th>Tipo</th>
                                <th>Periodicidad</th>
                                <th>Acción</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr data-ng-repeat="otherIncomes in otherIncomesList">
                                <td>{{otherIncomes.NoCatalogAccount}}</td>
                                <td>{{otherIncomes.AccountName}}</td>
                                <td>{{otherIncomes.Origin}}</td>
                                <td>{{otherIncomes.AccountType}}</td>
                                <td>{{otherIncomes.Periodicity}}</td>
                                <td>
                                    <a href="#/others/otherIncomes/{{otherIncomes.Id}}" title="Modificar cuenta" class="{{moduleCanEdit}}"><i class="fa fa-pencil-square-o"></i></a>
                                    <a ng-show="verifyCanView('app.otherIncomesPaymentHistory')" href="#/others/otherIncomesPaymentHistory/{{otherIncomes.Id}}" title="Lista de pagos" class="{{moduleCanView}}"><i class="fa fa-file-text-o"></i></a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <!-- END table-responsive-->
            </div>
        </div>
    </div>
</div>
<div class="col-lg-12 no-padder text-left m-b-lg">
    <a ui-sref="app.dashboard" class="mr btn btn-square btn-default"><i class="fa fa-arrow-left "></i> Salir</a>
</div>
