@{
    Layout = null;
    ViewBag.Title = "Listado de Catalogos";
}
<div class="col-lg-12 no-padder" ng-controller="ConfigController" ng-init="app.title = '@(ViewBag.Title)'">
    <div class="col-lg-12 no-padder">
        <div class="panel panel-default">
            <div class="panel-body">
                <!-- START panel-->
                <div class="col-lg-12 text-right m-b-xs no-padder">
                    <a ng-click="editCatalog()" class="btn btn-square btn-success {{moduleCanAdd}}"><i class="fa fa-plus-square"></i> Agregar Catalogo</a>
                </div>
                <div class="row-border hover ">
                    <table class="table dataTableGrid">
                        <thead>
                            <tr>
                                <th>Grupo</th>
                                <th>Grupo</th>
                                <th>Nombre</th>
                                <th>Descripción</th>
                                <th>Estado</th>
                                <th class="editColumm"></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr data-ng-repeat="catalog in catalogList">
                                <td>{{catalog.IdGroup}}</td>
                                <td>{{catalog.NameGroup}}</td>
                                <td>{{catalog.NameDetail}}</td>
                                <td>{{catalog.Description}}</td>
                                <td>{{catalog.Statu === true? 'Activo': 'In activo'}}</td>
                                <td>
                                    <a ng-click="editCatalog(catalog)" title="Moificar" class="{{moduleCanEdit}}"><i class="fa fa-pencil-square-o"></i></a>
                                    <a ng-click="deleteCatalog(catalog)" title="Suspender Catalogo" class="hide {{moduleCanDelete}} {{catalog.Statu ===true? '': 'hide'}}"><i class="fa fa-ban"></i></a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <!-- END table-responsive-->
            </div>
        </div>
    </div>
</div>
<div class="col-lg-12 no-padder text-left m-b-lg"> 
    <a ui-sref="app.dashboard" class="mr btn btn-square btn-default"><i class="fa fa-arrow-left "></i> Salir</a>
</div>
