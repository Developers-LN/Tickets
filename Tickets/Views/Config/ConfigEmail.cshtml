
@{
    ViewBag.Title = "Configuración de notificaciones por correo";
    Layout = null;
}

<div class="col-lg-12 no-padder" ng-controller="SystemEmailController" ng-init="app.title = '@(ViewBag.Title)'">
    <div class="col-lg-12 no-padder">
        <div class="panel panel-default">
            <div class="panel-body">

                <div class="form-group col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <label class=""><span>Seleccione el Modulo en el cual se mostrara el mensaje</span></label>

                    <select class="form-control " ng-model="nameSelected" ng-change="update()">
                        <option ng-repeat="name in Names" value="{{name.Id}}">{{name.Id}} - {{name.Name}}</option>
                    </select>
                </div>
                <div class="form-group col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <label for="subject" class="label-control">Titulo:</label>
                    <input type="text" name="subject" id="subject" class="form-control" placeholder="Introdusca el titulo del mensaje" required=""
                           ng-model="subject" />
                </div>
                <div class="form-group col-xs-12 col-sm-12 col md-12 col-lg-12">
                    <label class=""><span>Seleccione los detinatarios</span></label>

                    <select class="form-control dropdown-select2 " ng-model="selected" multiple="multiple" id="selectEmailMultiple">
                        @* Aqui se visualizan los datos del dorpdown desde el controlador *@
                    </select>

                </div>
                <div class="form-group col-xs-12 col-sm-12 col md-12 col-lg-12">
                    <label for="message" class="label-control">Mensaje:</label>
                    <textarea rows="5" class="form-control text " placeholder="Introdusca un mensaje, el mensaje escrito sera el que le se muestre a los destinatarios que haya elegido." required
                              ng-model="message"></textarea>
                </div>

                <button class="pull-right btn btn-success" ng-click="saveChanges()">Guardar</button>

            </div>
        </div>
    </div>
</div>
