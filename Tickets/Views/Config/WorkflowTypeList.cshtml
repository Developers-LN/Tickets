@{
    Layout = null;
    ViewBag.Title = "Listado de Tipo de Flujo de Trabajo";
}
<div class="col-lg-12 no-padder" ng-controller="ConfigController" ng-init="app.title = '@(ViewBag.Title)'">
    <div class="col-lg-12 no-padder">
        <div class="panel panel-default">
            <div class="panel-body">
                <!-- START panel-->
                <div class="col-lg-12 text-right m-b-xs no-padder">
                    <a ng-click="editWorkflowType()" class="btn btn-square btn-success {{moduleCanAdd}}"><i class="fa fa-plus-square"></i> Agregar Tipo de Flujo de Trabajo</a>
                </div>
                <div class="row-border hover ">
                    <table class="table dataTableGrid">
                        <thead>
                            <tr>
                                <th>Nombre</th>
                                <th>Descripción</th>
                                <th>Estado</th>
                                <th style="width: 200px;">Usuarios que Aprueban</th>
                                <th class="editColumm"></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr data-ng-repeat="workflowType in workflowTypeList">
                                <td>{{workflowType.Name}}</td>
                                <td>{{workflowType.Description}}</td>
                                <td>{{workflowType.StatuDescription}}</td>
                                <td>
                                    <a ng-click="managerWorkflowUser(workflowType)" title="Administrar Usuarios"><i class="fa fa-users"></i></a>
                                </td>
                                <td>
                                    <a ng-click="editWorkflowType(workflowType)" title="Moificar Tipo de Flujo de Trabajo" class="{{moduleCanEdit}}"><i class="fa fa-pencil-square-o"></i></a>
                                    <a ng-click="deleteWorkflowType(workflowType)" title="Borrar Tipo de Flujo de Trabajo" class=" {{moduleCanDelete}} " ><i class=" fa fa-times"></i></a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <!-- END table-responsive-->
            </div>
        </div>
    </div>
</div>
<div class="col-lg-12 no-padder text-left m-b-lg"> 
    <a ui-sref="app.dashboard" class="mr btn btn-square btn-default"><i class="fa fa-arrow-left "></i> Salir</a>
</div>
