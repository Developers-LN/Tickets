@{
    Layout = null;
    ViewBag.Title = "Listado de usuario para el flujo ";
}
<div class="col-lg-12 no-padder" ng-controller="ConfigController">
    <div class="app-view-header">@ViewBag.Title {{workflowType.Name}}</div>
    <div class="col-lg-12 no-padder">
        <div class="panel panel-default">
            <div class="panel-body">
                <!-- START panel-->
                <div class="col-lg-12 text-right m-b-xs no-padder">
                    <a ng-click="editWorkflowTypeUser()" class="btn btn-square btn-success {{moduleCanAdd}}"><i class="fa fa-plus-square"></i> Agregar Usuario</a>
                </div>
                <div class="row-border hover ">
                    <table class="table dataTableGrid">
                        <thead>
                            <tr>
                                <th>Usuario</th>
                                <th>Orden de aprobación</th>
                                <th>Tipo de aprobación</th>
                                <th class="editColumm"></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr data-ng-repeat="workflowTypeUser in workflowTypeUserList">
                                <td>{{workflowTypeUser.UserDesc}}</td>
                                <td>{{workflowTypeUser.OrderApproval}}</td>
                                <td>{{workflowTypeUser.typeApprovalDesc}}</td>
                                <td>
                                    <a ng-click="editWorkflowTypeUser(workflowTypeUser)" title="Moificar usuario del flujo" class="{{moduleCanEdit}}"><i class="fa fa-pencil-square-o"></i></a>
                                    <a ng-click="deleteWorkflowTypeUser(workflowTypeUser)" title="Borrar usuario del flujo" class=" {{moduleCanDelete}} " ><i class=" fa fa-times"></i></a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <!-- END table-responsive-->
            </div>
        </div>
    </div>
</div>
<div class="col-lg-12 no-padder text-left m-b-lg"> 
    <a ui-sref="app.configWorkflowTypeList" class="mr btn btn-square btn-default"><i class="fa fa-arrow-left "></i> Regresar</a>
</div>
