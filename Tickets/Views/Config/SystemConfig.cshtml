@{
    Layout = null;
    ViewBag.Title = "Configuración del Sistema";
}
<!-- START panel-->
<div class="col-lg-12 no-padder" ng-controller="SystemConfigController" ng-init="app.title = '@(ViewBag.Title)'">
    <div class="col-lg-12 no-padder">
        <div class="panel panel-default">
            <div class="panel-body">
                <tabset class="col-lg-12 no-padder">
                    <tab heading="Configuración">
                        <div class="col-lg-12 no-padder">
                            <div class="col-lg-12 no-padder">
                                <div class="col-lg-6">
                                    <fieldset>
                                        <div class="form-group">
                                            <label class="col-lg-12 no-padder control-label-left">Administrador de la Loteria:  <span class="color-red">*</span></label>
                                            <div class="col-lg-12 no-padder">
                                                <input type="text"
                                                       ng-model="config.LoteryAdmin"
                                                       class="form-control input-sm"
                                                       ng-required="true" />
                                            </div>
                                        </div>
                                    </fieldset>
                                </div>
                                <div class="col-lg-6">
                                    <fieldset>
                                        <div class="form-group">
                                            <label class="col-lg-12 no-padder control-label-left">Cargo:  <span class="color-red">*</span></label>
                                            <div class="col-lg-12 no-padder">
                                                <input type="text"
                                                       ng-model="config.Cargo"
                                                       class="form-control input-sm"
                                                       ng-required="true"/>
                                            </div>
                                        </div>
                                    </fieldset>
                                </div>
                                <div class="col-lg-6">
                                    <fieldset>
                                        <div class="form-group">
                                            <label class="col-lg-12 no-padder control-label-left">Porcentaje de devoluciones permitida:  <span class="color-red">*</span></label>
                                            <div class="col-lg-12 no-padder">
                                                <input type="number"
                                                       ng-model="config.MaxReturnTickets"
                                                       class="form-control input-sm"
                                                       ng-required="true"
                                                       step="any"
                                                       ng-min="0"
                                                       ng-max="100" />
                                            </div>
                                        </div>
                                    </fieldset>
                                </div>
                                <div class="col-lg-6">
                                    <fieldset>
                                        <div class="form-group">
                                            <label class="col-lg-12 no-padder control-label-left">Diseño de Impresion de Billetes:  <span class="color-red">*</span></label>
                                            <div class="col-lg-12 no-padder">
                                                <select ng-required="true" class="form-control" ng-model="config.TicketDesign">
                                                    <option ng-repeat="ticketDesing in ticketDesings" value="{{ticketDesing.id}}">{{ticketDesing.name}}</option>
                                                </select>
                                            </div>
                                        </div>
                                    </fieldset>
                                </div>
                                <div class="col-lg-6">
                                    <fieldset>
                                        <div class="form-group">
                                            <label class="col-lg-12 no-padder control-label-left">Tiempo de caducidad del sorteo:  <span class="color-red">*</span></label>
                                            <div class="col-lg-12 no-padder">
                                                <select ng-required="true" class="form-control" ng-model="config.RaffleXpiredTime">
                                                    <option ng-repeat="xpiredTime in xpiredTimes" value="{{xpiredTime.id}}">{{xpiredTime.name}}</option>
                                                </select>
                                            </div>
                                        </div>
                                    </fieldset>
                                </div>
                                <div class="col-lg-6">
                                    <fieldset>
                                        <div class="form-group">
                                            <label class="col-lg-12 no-padder control-label-left">Porcentaje descuento de ley (Premios Mayores):  <span class="color-red">*</span></label>
                                            <div class="col-lg-12 no-padder">
                                                <input type="number"
                                                       ng-model="config.LawDiscountPercentMayor"
                                                       class="form-control input-sm"
                                                       ng-required="true"
                                                       step="any"
                                                       ng-min="0"
                                                       ng-max="100" />
                                            </div>
                                        </div>
                                    </fieldset>
                                </div>
                            </div>
                            <div class="col-lg-12 no-padder">
                                <a ng-click="saveConfig()" class="mr btn btn-square btn-primary {{config.Id > 0? moduleCanEdit: moduleCanAdd }}"><i class="fa fa-floppy-o"></i> Guardar</a>
                            </div>
                        </div>
                    </tab>
                </tabset>
            </div>
        </div>
    </div>
    <div class="col-lg-12 no-padder">
        <a ui-sref="app.dashboard" class="mr btn btn-square btn-default"><i class="fa fa-times"></i>Salir</a>
    </div>
</div>
