@{
    Layout = null;
    ViewBag.Title = "Listado de roles";
}
<div class="col-lg-12 no-padder" ng-controller="SecurityController" ng-init="app.title = '@(ViewBag.Title)'">
    <!-- START panel-->
    <div class="col-lg-12 no-padder">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="app-view-header">Usuario: <b>{{user.Name}}</b></div>
                <!-- START table-responsive-->
                <div class="row-border hover ">
                    <table class="table dataTableGrid">
                        <thead>
                            <tr>
                                <th>Nombre</th>
                                <th>Descripción</th>
                                <th>Statu</th>
                                <th class="editColumm"></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr data-ng-repeat="rol in rolList">
                                <td>{{rol.Name}}</td>
                                <td>{{rol.Description}}</td>
                                <td><span id="ElementStatuLabel{{rol.Id}}">{{rol.Statu}}</span></td>
                                <td>
                                    <a id="AddElementButton{{rol.Id}}" ng-click="manageRolStatu(rol.Id, user.Id, true)" title="Asignar Roles" class="{{rol.Statu == 'Asignado'? 'hide': ''}} {{moduleCanEdit}}"><i class="fa fa-plus-circle add-element-button"></i></a>
                                    <a id="RemoveElementButton{{rol.Id}}" ng-click="manageRolStatu(rol.Id, user.Id, false)" title="Remover Roles" class="{{rol.Statu == 'Asignado'? '': 'hide'}} {{moduleCanEdit}}"><i class="fa fa-minus-circle remove-element-button"></i></a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <!-- END table-responsive-->
            </div>
        </div>
    </div>
</div>
<div class="col-lg-12 no-padder text-left m-b-lg"> 
    <a ui-sref="app.securityUserList" class="mr btn btn-square btn-default"><i class="fa fa-arrow-left "></i> Regresar</a>
</div>
