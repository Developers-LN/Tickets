@{
    Layout = null;
    ViewBag.Title = "Creación de Rol";
}
<!-- START panel-->
<div class="col-lg-12 no-padder" ng-controller="SecurityController" ng-init="app.title = '@(ViewBag.Title)'">
    <div class="col-lg-12 no-padder">
        <div class="panel panel-default">
            <div class="panel-body">
                <input type="hidden"
                       ng-model="rol.RoleId" />
                <fieldset>
                    <div class="form-group">
                        <label class="col-lg-12 control-label-left">Nombre del Rol: <span class="color-red">*</span></label>
                        <div class="col-lg-12">
                            <input type="text"
                                   ng-model="rol.RoleName"
                                   class="form-control"
                                   ng-required="true">
                        </div>
                    </div>
                </fieldset>
                <fieldset>
                    <div class="form-group">
                        <label class="col-lg-12 control-label-left">Descripción: </label>
                        <div class="col-lg-12">
                            <textarea class="form-control"
                                      ng-model="rol.Description"
                                      style="max-height: 109px; height: 109px;"></textarea>
                        </div>
                    </div>
                </fieldset>
            </div>
        </div>
    </div>
    <div class="col-lg-12 no-padder text-left m-b-lg">
        <a ui-sref="app.securityRolList" class="mr btn btn-square btn-warning"><i class="fa fa-times"></i> Cancelar</a>
        <a ng-click="saveRolForm()" class="mr btn btn-square btn-primary {{moduleCanEdit}}"><i class="fa fa-floppy-o"></i> Guardar</a>
    </div>
</div>