@{
    Layout = null;
    ViewBag.Title = "Listado de Rol para";
}
<div class="col-lg-12 no-padder" ng-controller="SecurityController" >
    <div class="app-view-header">@ViewBag.Title <b>{{rol.RoleName}}</b></div>
    <!-- START panel-->
    <div class="col-lg-12 no-padder">
        <div class="panel panel-default">
            <div class="panel-body">
                <!-- START table-responsive-->
                <div class="row-border hover ">
                    <table class="table dataTableGrid">
                        <thead>
                            <tr>
                                <th>Nombre</th>
                                <th>Descripción</th>
                                <th>Estado</th>
                                <th class="editColumm"></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr data-ng-repeat="office in officeList">
                                <td>{{office.Name}}</td>
                                <td>{{office.Description}}</td>
                                <td><span id="ElementStatuLabel{{office.Id}}">{{office.Statu}}</span></td>
                                <td>
                                    <a id="AddElementButton{{office.Id}}" ng-click="manageOfficeStatu(rol.RoleId, office.Id, true)" title="Asignar Usuario" class="{{office.Statu == 'Asignada'? 'hide': ''}} {{moduleCanEdit}}" ><i class="fa fa-plus-circle add-element-button"></i></a>
                                    <a id="RemoveElementButton{{office.Id}}" ng-click="manageOfficeStatu(rol.RoleId, office.Id, false)" title="Remover Usuario" class="{{office.Statu == 'Asignada'? '': 'hide'}} {{moduleCanEdit}}" ><i class="fa fa-minus-circle remove-element-button"></i></a>    
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <!-- END table-responsive-->
            </div>
        </div>
    </div>
</div>
<div class="col-lg-12 no-padder text-left m-b-lg"> 
    <a ui-sref="app.securityRolList" class="mr btn btn-square btn-default"><i class="fa fa-arrow-left "></i> Regresar</a>
</div>
