@{
    Layout = null;
    ViewBag.Title = "Listado de Usuarios";
}
<div class="col-lg-12 no-padder" ng-controller="SecurityController" ng-init="app.title = '@(ViewBag.Title)'">
    <div class="col-lg-12 no-padder">
        <div class="panel panel-default">
            <div class="panel-body">
                <!-- START panel-->
                <div class="col-lg-12 text-right m-b-xs no-padder">
                    <a ng-click="editUser()" class="btn btn-square btn-success {{moduleCanEdit}}"><i class="fa fa-plus-square"></i> Agregar Usuario</a>
                </div>
                <div class="row-border hover ">
                    <table class="table dataTableGrid">
                        <thead>
                            <tr>
                                <th>Nombre</th>
                                <th>Empleado</th>
                                <th>Estado</th>
                                <th class="editColumm"></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr data-ng-repeat="user in userList">
                                <td>{{user.Name}}</td>
                                <td>{{user.EmpleadoDesc}}</td>
                                <td>{{user.StatuDesc}}</td>
                                <td>
                                    <a ng-click="editUser(user)" title="Moificar" class="{{moduleCanEdit}}"><i class="fa fa-pencil-square-o"></i></a>
                                    <a ng-click="manageRols(user)" title="Administrar Roles"><i class="fa fa-list-alt"></i></a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <!-- END table-responsive-->
            </div>
        </div>
    </div>
</div>
<div class="col-lg-12 no-padder text-left m-b-lg"> 
    <a ui-sref="app.dashboard" class="mr btn btn-square btn-default"><i class="fa fa-arrow-left "></i> Salir</a>
</div>
