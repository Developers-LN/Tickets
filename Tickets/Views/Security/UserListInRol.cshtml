@{
    Layout = null;
    ViewBag.Title = "Listado de Rol para";
}
<div class="col-lg-12 no-padder" ng-controller="SecurityController" ng-init="app.title = '@(ViewBag.Title)'">
    <div class="app-view-header">@ViewBag.Title <b>{{rol.RoleName}}</b></div>
    <!-- START panel-->
    <div class="col-lg-12 no-padder">
        <div class="panel panel-default">
            <div class="panel-body">
                <!-- START table-responsive-->
                <div class="row-border hover ">
                    <table class="table dataTableGrid">
                        <thead>
                            <tr>
                                <th>Nombre</th>
                                <th>Estado</th>
                                <th class="editColumm"></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr data-ng-repeat="user in userList">
                                <td>{{user.Name}}</td>
                                <td><span id="ElementStatuLabel{{user.Id}}">{{user.Statu}}</span></td>
                                <td>
                                    <a id="AddElementButton{{user.Id}}" ng-click="manageRolStatu(rol.RoleId, user.Id, true)" title="Asignar Usuario" class="{{user.Statu == 'Asignado'? 'hide': ''}} {{moduleCanEdit}}"><i class="fa fa-plus-circle add-element-button"></i></a>
                                    <a id="RemoveElementButton{{user.Id}}" ng-click="manageRolStatu(rol.RoleId, user.Id, false)" title="Remover Usuario" class="{{user.Statu == 'Asignado'? '': 'hide'}} {{moduleCanEdit}}"><i class="fa fa-minus-circle remove-element-button"></i></a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <!-- END table-responsive-->
            </div>
        </div>
    </div>
</div>
<div class="col-lg-12 no-padder text-left m-b-lg"> 
    <a ui-sref="app.securityRolList" class="mr btn btn-square btn-default"><i class="fa fa-arrow-left "></i> Regresar</a>
</div>
